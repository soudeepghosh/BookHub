<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutFragment">

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="About This App"
        android:padding="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2a3eb1"
        />
    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_fragment"
        android:layout_below="@id/about"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtAbout"
        android:text="Developer name : Soudeep Ghosh\nEmail id : soudeepghosh7@gmail.com"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:layout_below="@+id/txtContact"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="15sp"/>

</RelativeLayout>